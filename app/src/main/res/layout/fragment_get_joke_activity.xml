<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.GetJokeActivityFrag">

    <!-- ScrollView ensures content is scrollable if needed -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- LinearLayout holds the UI elements of the fragment -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"> <!-- Added padding for better spacing -->

            <!-- Button to get the joke -->
            <Button

                android:id="@+id/btnGetJoke"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="50dp"
                android:text="Is this a Joke?" />

            <!-- Label for the Joke setup -->
            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Joke :" />

            <!-- TextView to display the joke setup -->
            <TextView
                android:id="@+id/txtVwSetup"
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:text="TextView" />

            <!-- Label for the Punchline -->
            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Punchline:" />

            <!-- TextView to display the punchline -->
            <TextView
                android:id="@+id/txtVwPunchline"
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:text="TextView" />

            <!-- Label for Joke Type -->
            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Joke Type:" />

            <!-- TextView to display the joke type -->
            <TextView
                android:id="@+id/txtVwJokeType"
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:text="TextView" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>
